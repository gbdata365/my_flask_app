# 데이터베이스 설정 (MySQL - 기존)
DB_ROOT_PASSWORD=rootpass123!
DB_NAME=dashboard_db
DB_USER=dashuser
DB_PASSWORD=dashpass

# PostgreSQL 설정 (클라우드타입)
# 클라우드타입 PostgreSQL 서비스의 연결 정보를 입력하세요
DATABASE_URL=postgresql://username:password@postgresql:5432/dbname
# 또는 개별 항목으로:
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password

# Flask 애플리케이션 설정
FLASK_ENV=production
SECRET_KEY=csv_dashboard_secret_key_2024_docker

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# 보안 설정 (필요시 변경)
ALLOWED_HOSTS=*

# 업로드 설정
MAX_CONTENT_LENGTH=104857600  # 100MB

# 로그 레벨
LOG_LEVEL=INFO
